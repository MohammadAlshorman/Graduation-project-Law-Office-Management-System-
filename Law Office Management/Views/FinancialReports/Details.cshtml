@model Law_Office_Management.Models.FinancialReport
@{
    ViewData["Title"] = "📄 Report Details";
}

<h2>@ViewData["Title"]</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Created By:</dt>
    <dd class="col-sm-10">@Model.CreatedByNavigation?.Username</dd>

    <dt class="col-sm-2">Created At:</dt>
    <dd class="col-sm-10">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">File:</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ReportFile))
        {
            <a href="~/uploads/@Model.ReportFile" target="_blank">📥 View File</a>
        }
        else
        {
            <span class="text-danger">No File</span>
        }
    </dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">↩ Back</a>
