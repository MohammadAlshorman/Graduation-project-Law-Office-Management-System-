@model Law_Office_Management.Models.FinancialReport
@{
    ViewData["Title"] = "✏️ Edit Report";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

<form asp-action="Edit" asp-route-id="@Model.ReportId" enctype="multipart/form-data">
    <input type="hidden" asp-for="ReportId" />

    <div class="form-group mb-3">
        <label>Report Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Current File:</label>
        @if (!string.IsNullOrEmpty(Model.ReportFile))
        {
            <a href="~/uploads/@Model.ReportFile" target="_blank">📥 View File</a>
        }
        else
        {
            <span class="text-danger">No File</span>
        }
    </div>

    <div class="form-group mb-3">
        <label>Upload New File (optional)</label>
        <input type="file" name="newFile" class="form-control" accept=".pdf,.doc,.docx" />
    </div>

    <button type="submit" class="btn btn-primary">💾 Update</button>
    <a asp-action="Index" class="btn btn-secondary">↩ Back</a>
</form>
