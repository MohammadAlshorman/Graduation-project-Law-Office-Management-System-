@model Law_Office_Management.Models.FinancialReport
@{
    ViewData["Title"] = "🗑 Delete Report";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this report?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Created At:</dt>
    <dd class="col-sm-10">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReportId" />
    <button type="submit" class="btn btn-danger">🗑 Delete</button>
    <a asp-action="Index" class="btn btn-secondary">↩ Cancel</a>
</form>
