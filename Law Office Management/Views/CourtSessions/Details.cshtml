@model Law_Office_Management.Models.CourtSession
@{
    ViewData["Title"] = "Session Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title-area">
    <div class="container">
        <h1 class="text-center mb-4">📄 Court Session Details</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="session-header mb-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <h3 class="mb-0">@Model.Case?.Title</h3>
                            <span class="badge bg-primary" style="background-color: #f18a00 !important;">
                                @Model.SessionDate?.ToString("MMM dd, yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="session-details">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Case Title</label>
                                    <strong>@Model.Case?.Title</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Date & Time</label>
                                    <strong>@Model.SessionDate?.ToString("MMM dd, yyyy HH:mm")</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Court Location</label>
                                    <strong>@Model.Location</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Assigned Lawyer</label>
                                    <strong>@Model.Case?.Lawyer?.FullName</strong>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Session Notes</label>
                                    <div class="notes-box p-3 bg-light rounded">
                                        @(string.IsNullOrEmpty(Model.Notes) ? "No notes available" : Model.Notes)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                        <a asp-action="Edit" asp-route-id="@Model.SessionId" class="btn btn-primary px-4" style="background-color: #f18a00; border-color: #f18a00;">
                            <i class="fas fa-edit me-2"></i>Edit Session
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title-area {
        background: linear-gradient(145deg, #f18a00, #ff9e2c);
        padding: 2rem 0;
        margin-bottom: 2rem;
    }

    .page-title-area h1 {
        color: white;
        font-weight: 600;
        margin: 0;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .session-header h3 {
        color: #333;
        font-size: 1.5rem;
    }

    .badge {
        padding: 0.5em 1em;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .detail-item label {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .detail-item strong {
        color: #333;
        font-size: 1.1rem;
    }

    .notes-box {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 5px;
        min-height: 100px;
    }

    .btn-primary {
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #d67a00 !important;
        border-color: #d67a00 !important;
        transform: translateY(-1px);
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
