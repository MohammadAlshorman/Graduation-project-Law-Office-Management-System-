@model Law_Office_Management.Models.CourtSession
@{
    ViewData["Title"] = "Delete Session";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title-area">
    <div class="container">
        <h1 class="text-center mb-4">🗑️ Delete Court Session</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading mb-2">Are you sure you want to delete this session?</h4>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="session-details mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Case</label>
                                    <strong>@Model.Case?.Title</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Date & Time</label>
                                    <strong>@Model.SessionDate?.ToString("MMM dd, yyyy HH:mm")</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Location</label>
                                    <strong>@Model.Location</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Lawyer</label>
                                    <strong>@Model.Case?.Lawyer?.FullName</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-flex gap-2 justify-content-end">
                        <input type="hidden" asp-for="SessionId" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash me-2"></i>Yes, Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title-area {
        background: linear-gradient(145deg, #f18a00, #ff9e2c);
        padding: 2rem 0;
        margin-bottom: 2rem;
    }

        .page-title-area h1 {
            color: white;
            font-weight: 600;
            margin: 0;
        }

    .card {
        border: none;
        border-radius: 10px;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }

    .detail-item label {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .detail-item strong {
        color: #333;
        font-size: 1.1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
