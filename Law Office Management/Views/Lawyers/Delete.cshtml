@model Law_Office_Management.Models.Lawyer

@{
    ViewData["Title"] = "🗑 Delete Lawyer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-danger">Are you sure you want to delete this lawyer?</h2>

<div class="card border-danger mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Specialty</dt>
            <dd class="col-sm-9">@Model.Specialty</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@((Model.IsActive == true) ? "✅ Active" : "❌ Inactive")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="LawyerId" />
    <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">↩ Cancel</a>
</form>
