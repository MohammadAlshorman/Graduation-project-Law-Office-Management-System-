@model Law_Office_Management.Models.Contract
@{
    ViewData["Title"] = "Create Contract";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var clients = ViewData["Clients"] as List<Law_Office_Management.Models.Client>;
    var lawyers = ViewData["Lawyers"] as List<Law_Office_Management.Models.Lawyer>;
}

<h2 class="mb-4">➕ Add New Contract</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow-sm p-4 bg-white rounded">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ClientId" class="form-label">Client</label>
        <select asp-for="ClientId" class="form-select" asp-items="@(new SelectList(clients, "ClientId", "FullName"))"></select>
    </div>

    <div class="mb-3">
        <label asp-for="LawyerId" class="form-label">Lawyer</label>
        <select asp-for="LawyerId" class="form-select" asp-items="@(new SelectList(lawyers, "LawyerId", "FullName"))"></select>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Contract File (PDF)</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
