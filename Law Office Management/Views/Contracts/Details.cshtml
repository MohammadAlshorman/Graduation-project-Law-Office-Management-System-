@model Law_Office_Management.Models.Contract
@{
    ViewData["Title"] = "Contract Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">📄 Contract Details</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Client</dt>
        <dd class="col-sm-9">@Model.Client?.FullName</dd>

        <dt class="col-sm-3">Lawyer</dt>
        <dd class="col-sm-9">@Model.Lawyer?.FullName</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EndDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">File</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.FilePath))
            {
                <a href="@Model.FilePath" target="_blank">📥 View File</a>
            }
            else
            {
                <span class="text-muted">No file</span>
            }
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.ContractId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
