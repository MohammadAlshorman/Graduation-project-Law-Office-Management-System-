@model Law_Office_Management.Models.Client

@{
    ViewData["Title"] = "Delete Client";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0 text-danger">
            <i class="fas fa-user-times"></i> Delete Client
        </h2>
    </div>

    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Are you sure you want to delete this client? This action cannot be undone.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Personal Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-user text-muted me-2"></i>
                            @Model.FullName
                        </dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-phone text-muted me-2"></i>
                            @Model.Phone
                        </dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-envelope text-muted me-2"></i>
                            @Model.Email
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Additional Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-map-marker-alt text-muted me-2"></i>
                            @Model.Address
                        </dd>

                        <dt class="col-sm-4">National ID</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-id-card text-muted me-2"></i>
                            @Model.NationalId
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClientId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Cancel
            </a>
        </div>
    </form>
</div>

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        margin-bottom: 1rem;
    }

    .alert-danger {
        background-color: #fff5f5;
        border-color: #feb2b2;
        color: #c53030;
    }
</style>
