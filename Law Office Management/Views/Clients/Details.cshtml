@model Law_Office_Management.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<h2>Client Details</h2>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">National ID</dt>
        <dd class="col-sm-10">@Model.NationalId</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
