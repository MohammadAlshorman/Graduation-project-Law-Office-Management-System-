@model Law_Office_Management.Models.Notification
@{
    ViewData["Title"] = "Delete Notification";
}

<h2>🗑️ Delete Notification</h2>
<hr />

<div>
    <h4>Are you sure you want to delete this notification?</h4>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Message</dt>
        <dd class="col-sm-9">@Model.Message</dd>

        <dt class="col-sm-3">User</dt>
        <dd class="col-sm-9">@Model.User?.Username</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NotificationId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>