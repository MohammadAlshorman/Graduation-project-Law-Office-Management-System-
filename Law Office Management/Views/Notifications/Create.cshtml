@model Law_Office_Management.Models.Notification
@{
    ViewData["Title"] = "Create Notification";
}

<h2>➕ Create Notification</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Message</label>
        <textarea asp-for="Message" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Type</label>
        <input asp-for="Type" class="form-control" placeholder="e.g., Session, Task, Reminder" />
    </div>

    <div class="form-group mb-3">
        <label>For User</label>
        <select asp-for="UserId" class="form-control">
            <option value="">-- Select User --</option>
            @foreach (var u in (List<User>)ViewData["Users"])
            {
                <option value="@u.UserId">@u.Username</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Related Case (optional)</label>
        <select asp-for="RelatedCaseId" class="form-control">
            <option value="">-- None --</option>
            @foreach (var c in (List<Case>)ViewData["Cases"])
            {
                <option value="@c.CaseId">@c.Title</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
