@inject IHttpContextAccessor HttpContextAccessor
@{
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lawyer Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">⚖️ Lawyer Panel</a>
        <div class="ms-auto text-white">
            Welcome @username |
            <a class="btn btn-sm btn-outline-light" asp-controller="Auth" asp-action="Logout">Logout</a>
        </div>
    </nav>

    <div class="d-flex">
        <div class="sidebar bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h5 class="text-center">📋 Navigation</h5>
            <nav class="nav flex-column">
                <a class="nav-link text-white" asp-controller="LawyerDashboard" asp-action="Index"><i class="fas fa-chart-line me-2"></i> Dashboard</a>
                <a class="nav-link text-white" asp-controller="Cases" asp-action="Index"><i class="fas fa-folder-open me-2"></i> My Cases</a>
                <a class="nav-link text-white" asp-controller="AppTasks" asp-action="Index"><i class="fas fa-tasks me-2"></i> Tasks</a>
                <a class="nav-link text-white" asp-controller="CourtSessions" asp-action="Index"><i class="fas fa-gavel me-2"></i> Sessions</a>
                <a class="nav-link text-white" asp-controller="Contracts" asp-action="Index"><i class="fas fa-file-signature me-2"></i> Contracts</a>
            </nav>
        </div>

        <div class="flex-grow-1 p-4" style="background-color: #f8f9fa;">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
