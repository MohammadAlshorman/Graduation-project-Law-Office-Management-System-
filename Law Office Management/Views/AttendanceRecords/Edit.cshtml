@model Law_Office_Management.Models.AttendanceRecord
@{
    ViewData["Title"] = "Edit Attendance Record";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-edit text-primary"></i> Edit Attendance Record
        </h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="AttendanceId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Lawyer</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <select asp-for="LawyerId" class="form-control" required>
                                    <option value="">Select Lawyer</option>
                                    @foreach (var lawyer in (List<Lawyer>)ViewData["LawyerList"])
                                    {
                                        <option value="@lawyer.LawyerId" selected="@(lawyer.LawyerId == Model.LawyerId)">
                                            @lawyer.FullName
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Check In Time</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-sign-in-alt"></i></span>
                                <input asp-for="CheckInTime" class="form-control" type="datetime-local" required />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Check Out Time</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-sign-out-alt"></i></span>
                                <input asp-for="CheckOutTime" class="form-control" type="datetime-local" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-sticky-note"></i></span>
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #ced4da;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(241, 138, 0, 0.15);
    }
</style>
