@model Law_Office_Management.Models.AttendanceRecord
@{
    ViewData["Title"] = "Delete Attendance Record";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0 text-danger">
            <i class="fas fa-trash"></i> Delete Attendance Record
        </h2>
    </div>

    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Are you sure you want to delete this attendance record? This action cannot be undone.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Basic Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Lawyer</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-user text-muted me-2"></i>
                            @Model.Lawyer?.FullName
                        </dd>

                        <dt class="col-sm-4">Check In</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-sign-in-alt text-muted me-2"></i>
                            @Model.CheckInTime?.ToString("yyyy-MM-dd HH:mm")
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Additional Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Check Out</dt>
                        <dd class="col-sm-8">
                            @if (Model.CheckOutTime.HasValue)
                            {
                                <i class="fas fa-sign-out-alt text-muted me-2"></i>
                                @Model.CheckOutTime.Value.ToString("yyyy-MM-dd HH:mm")
                            }
                            else
                            {
                                <span class="badge bg-warning">Active</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-sticky-note text-muted me-2"></i>
                            @Model.Notes
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AttendanceId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Cancel
            </a>
        </div>
    </form>
</div>

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        margin-bottom: 1rem;
    }

    .badge {
        padding: 0.5em 0.75em;
    }

    .alert-danger {
        background-color: #fff5f5;
        border-color: #feb2b2;
        color: #c53030;
    }
</style>
