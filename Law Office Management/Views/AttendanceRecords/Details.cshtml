@model Law_Office_Management.Models.AttendanceRecord
@{
    ViewData["Title"] = "Attendance Record Details";
}

<h2>📋 Attendance Record Details</h2>

<dl class="row">
    <dt class="col-sm-3">Lawyer</dt>
    <dd class="col-sm-9">@Model.Lawyer?.FullName</dd>

    <dt class="col-sm-3">Check In</dt>
    <dd class="col-sm-9">@Model.CheckInTime?.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">Check Out</dt>
    <dd class="col-sm-9">
        @(Model.CheckOutTime.HasValue ? Model.CheckOutTime?.ToString("yyyy-MM-dd HH:mm") : "—")
    </dd>

    <dt class="col-sm-3">Notes</dt>
    <dd class="col-sm-9">@Model.Notes</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Back</a>
