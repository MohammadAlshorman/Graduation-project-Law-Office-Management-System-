@model IEnumerable<Law_Office_Management.Models.Verdict>
@{
    ViewData["Title"] = "Verdicts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">📜 Verdicts Management</h2>

<a class="btn btn-primary mb-3" asp-action="Create"><i class="fas fa-plus"></i> Add Verdict</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Case Title</th>
            <th>Summary</th>
            <th>Verdict Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Case?.Title</td>
                <td>@(v.Summary?.Length > 60 ? v.Summary.Substring(0, 60) + "..." : v.Summary)</td>
                <td>@v.VerdictDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@v.VerdictId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@v.VerdictId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@v.VerdictId" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
