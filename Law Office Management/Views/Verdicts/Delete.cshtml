@model Law_Office_Management.Models.Verdict
@{
    ViewData["Title"] = "Delete Verdict";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-trash-alt text-danger"></i> Delete Verdict
        </h2>
    </div>

    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Are you sure you want to delete this verdict? This action cannot be undone.
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Case Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-folder text-muted me-2"></i>Case
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">
                                <i class="fas fa-folder me-1"></i>
                                @Model.Case?.Title
                            </span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-calendar-alt text-muted me-2"></i>Verdict Date
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-calendar-alt me-1"></i>
                                @Model.VerdictDate?.ToString("yyyy-MM-dd")
                            </span>
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Verdict Summary</h5>
                    <div class="card bg-light">
                        <div class="card-body">
                            <p class="mb-0">@Model.Summary</p>
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="VerdictId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete Verdict
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .bg-primary {
        background-color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    dd {
        margin-bottom: 0.5rem;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }

    .alert {
        border-radius: 10px;
    }
</style>