@model Law_Office_Management.Models.Verdict
@{
    ViewData["Title"] = "Verdict Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">📄 Verdict Details</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Case</dt>
        <dd class="col-sm-9">@Model.Case?.Title</dd>

        <dt class="col-sm-3">Summary</dt>
        <dd class="col-sm-9">@Model.Summary</dd>

        <dt class="col-sm-3">Verdict Date</dt>
        <dd class="col-sm-9">@Model.VerdictDate?.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.VerdictId" class="btn btn-warning mt-3"><i class="fas fa-edit"></i> Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>