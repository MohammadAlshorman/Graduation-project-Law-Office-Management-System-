@model Law_Office_Management.Models.AppTask
@{
    ViewData["Title"] = "Task Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-tasks text-primary"></i> Task Details
        </h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Basic Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-heading me-2"></i>Title
                        </dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-align-left me-2"></i>Description
                        </dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-tasks me-2"></i>Status
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.IsCompleted == true)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Completed
                                </span>
                            }
                            else if (Model.DueDate < DateTime.Today)
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation-circle me-1"></i>Overdue
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-clock me-1"></i>In Progress
                                </span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Task Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-user-tie me-2"></i>Lawyer
                        </dt>
                        <dd class="col-sm-8">@Model.Lawyer?.FullName</dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-calendar me-2"></i>Due Date
                        </dt>
                        <dd class="col-sm-8">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>
                    </dl>
                </div>
            </div>

            <hr />
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.TaskId" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    dd {
        margin-bottom: 0.5rem;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }
</style>
