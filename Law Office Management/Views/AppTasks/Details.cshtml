@model Law_Office_Management.Models.AppTask
@{
    ViewData["Title"] = "Task Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <strong>Title:</strong> @Model.Title
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Lawyer:</strong> @Model.Lawyer?.FullName
</div>
<div>
    <strong>Due Date:</strong> @Model.DueDate?.ToString("yyyy-MM-dd")
</div>
<div>
    <strong>Status:</strong> @(Model.IsCompleted == true ? "Completed" : "In Progress")
</div>

<a asp-action="Index" class="btn btn-secondary">↩ Back</a>
