@model Law_Office_Management.Models.AppTask
@{
    ViewData["Title"] = "Delete Task";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this task?</h4>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Lawyer</dt>
    <dd class="col-sm-10">@Model.Lawyer?.FullName</dd>

    <dt class="col-sm-2">Due Date</dt>
    <dd class="col-sm-10">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="TaskId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
