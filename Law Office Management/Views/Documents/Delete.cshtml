@model Law_Office_Management.Models.Document

@{
    ViewData["Title"] = "Delete Document";
}

<div class="page-title-area">
    <div class="container">
        <h1 class="text-center mb-4">🗑️ Delete Document</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading mb-2">Are you sure you want to delete this document?</h4>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="document-details mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">File Name</label>
                                    <strong>@Model.FileName</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Document Type</label>
                                    <strong>@Model.DocumentType</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Case</label>
                                    <strong>@Model.Case?.Title</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item mb-3">
                                    <label class="text-muted d-block">Uploaded By</label>
                                    <strong>@Model.UploadedByNavigation?.Username</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex gap-2 justify-content-end">
                        <input type="hidden" asp-for="DocumentId" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }

    .detail-item label {
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .detail-item strong {
        color: #333;
        font-size: 1.1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>
