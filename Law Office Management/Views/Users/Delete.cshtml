@model Law_Office_Management.Models.User
@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-user-times text-danger"></i> Delete User
        </h2>
    </div>

    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Are you sure you want to delete user <strong>@Model.Username</strong>? This action cannot be undone.
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Basic Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-user text-muted me-2"></i>Username
                        </dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user-tag text-muted me-2"></i>Role
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Role == "Admin" ? "warning" : "info")">
                                <i class="fas fa-@(Model.Role == "Admin" ? "user-shield" : "user-tie") me-1"></i>
                                @Model.Role
                            </span>
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Status</h5>
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-toggle-on text-muted me-2"></i>Account Status
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.IsActive == true ? "success" : "secondary")">
                                <i class="fas fa-@(Model.IsActive == true ? "check-circle" : "times-circle") me-1"></i>
                                @(Model.IsActive == true ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete User
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    dd {
        margin-bottom: 0.5rem;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
    }

    .alert {
        border-radius: 10px;
    }
</style>

