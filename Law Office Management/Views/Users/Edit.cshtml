@model Law_Office_Management.Models.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-user-edit text-primary"></i> Edit User
        </h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="UserId" />

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Basic Information</h5>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="fas fa-user text-muted me-2"></i>Username
                            </label>
                            <input asp-for="Username" class="form-control" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordHash" class="form-label">
                                <i class="fas fa-lock text-muted me-2"></i>Password
                            </label>
                            <input asp-for="PasswordHash" type="password" class="form-control" required />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Role & Status</h5>
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">
                                <i class="fas fa-user-tag text-muted me-2"></i>Role
                            </label>
                            <select asp-for="Role" class="form-select" asp-items="new SelectList(ViewBag.Roles)" required>
                                <option value="">-- Select Role --</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-toggle-on text-muted me-2"></i>Status
                            </label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsActive" @(Model.IsActive == true ? "checked" : "")>
                                <label class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    :root {
        --primary-color: #f18a00;
        --primary-hover: #d97b00;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(241, 138, 0, 0.25);
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
</style>
