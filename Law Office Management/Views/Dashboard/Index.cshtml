@model Law_Office_Management.Models.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-accent: #F18A00;
        --primary-accent-light: #FFA733;
        --primary-accent-dark: #D97A00;
    }

    .card-stat {
        border-left: 4px solid var(--primary-accent);
        transition: transform 0.2s;
    }

        .card-stat:hover {
            transform: translateY(-3px);
        }

    .badge-accent {
        background-color: var(--primary-accent);
    }

    .btn-accent {
        background-color: var(--primary-accent);
        color: white;
        border: none;
    }

        .btn-accent:hover {
            background-color: var(--primary-accent-dark);
            color: white;
        }

    .table th {
        border-top: 2px solid var(--primary-accent);
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-speedometer2 me-2" style="color: var(--primary-accent);"></i> Dashboard Overview</h2>
        <small class="text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy h:mm tt")</small>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">LAWYERS</h6>
                            <h3 class="mb-0">@Model.LawyersCount</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-person-badge fs-4"></i>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted small">
                        <span class="text-success me-2"><i class="bi bi-arrow-up"></i> 12.5%</span>
                        <span>since last month</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">CLIENTS</h6>
                            <h3 class="mb-0">@Model.ClientsCount</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted small">
                        <span class="text-success me-2"><i class="bi bi-arrow-up"></i> 8.3%</span>
                        <span>since last month</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">ACTIVE CASES</h6>
                            <h3 class="mb-0">@Model.CasesCount</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-folder fs-4"></i>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted small">
                        <span class="text-danger me-2"><i class="bi bi-arrow-down"></i> 3.2%</span>
                        <span>since last month</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">ACTIVE CONTRACTS</h6>
                            <h3 class="mb-0">@Model.ActiveContractsCount</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-file-earmark-text fs-4"></i>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted small">
                        <span class="text-success me-2"><i class="bi bi-arrow-up"></i> 5.7%</span>
                        <span>since last month</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">PENDING TASKS</h6>
                            <h3 class="mb-0">@Model.TasksPending</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-list-check fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @((Model.TasksPending * 100)/(Model.TasksPending + Model.TasksCompleted))%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">COMPLETED TASKS</h6>
                            <h3 class="mb-0">@Model.TasksCompleted</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-check-circle fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @((Model.TasksCompleted * 100)/(Model.TasksPending + Model.TasksCompleted))%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">TODAY'S ATTENDANCE</h6>
                            <h3 class="mb-0">@Model.TodayAttendance</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-calendar-check fs-4"></i>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted small">
                        <span>@((Model.TodayAttendance * 100) / Model.LawyersCount)% of team present</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-stat shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">UNREAD NOTIFICATIONS</h6>
                            <h3 class="mb-0">@Model.UnreadNotifications</h3>
                        </div>
                        <div class="bg-light rounded-circle p-3" style="color: var(--primary-accent);">
                            <i class="bi bi-bell fs-4"></i>
                        </div>
                    </div>
                    <a href="/Notifications" class="btn btn-sm btn-accent mt-3">View All</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks and Notifications -->
    <div class="row g-4 mb-4">
        <!-- Tasks Column -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-list-task me-2" style="color: var(--primary-accent);"></i> Recent Tasks</h5>
                        <a href="/Tasks" class="btn btn-sm btn-outline-secondary">View All</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var task in Model.LatestTasks ?? new List<Law_Office_Management.Models.AppTask>())
                        {
                            <div class="list-group-item border-0 py-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@task.Title</h6>
                                        <small class="text-muted">Assigned to: @task.Lawyer?.FullName</small>
                                    </div>
                                    <span class="badge bg-@(task.IsCompleted == true ? "success" : "warning") rounded-pill">
                                        @(task.IsCompleted == true ? "Completed" : "Pending")
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted">Due: @(task.DueDate?.ToString("MMM dd, yyyy") ?? "No deadline")</small>
                                    <div class="progress mt-1" style="height: 4px;">
                                        <div class="progress-bar bg-@(task.IsCompleted == true ? "success" : "warning")" role="progressbar" style="width: @(task.IsCompleted == true ? "100" : "35")%"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications Column -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-bell me-2" style="color: var(--primary-accent);"></i> Notifications (@Model.UnreadNotifications unread)</h5>
                        <a href="/Notifications" class="btn btn-sm btn-outline-secondary">View All</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var note in Model.LatestNotifications ?? new List<Law_Office_Management.Models.Notification>())
                        {
                            <div class="list-group-item border-0 py-3 @(note.IsRead == false ? "bg-light" : "")">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@note.Title</h6>
                                        <p class="mb-1 small">@note.Message</p>
                                        <small class="text-muted">@note.CreatedAt?.ToString("MMM dd, yyyy h:mm tt")</small>
                                    </div>
                                    @if (note.IsRead != true)
                                    {
                                        <span class="badge bg-danger rounded-pill">New</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Court Sessions Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom-0">
            <h5 class="mb-0"><i class="bi bi-calendar-event me-2" style="color: var(--primary-accent);"></i> Upcoming Court Sessions</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Case</th>
                            <th>Lawyer</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.LatestSessions ?? new List<Law_Office_Management.Models.CourtSession>())
                        {
                            <tr>
                                <td><strong>@s.Case?.Title</strong></td>
                                <td>@s.Case?.Lawyer?.FullName</td>
                                <td>@s.SessionDate?.ToString("MMM dd, yyyy")</td>
                                <td>@s.Location</td>
                                <td>
                                    @if (s.SessionDate > DateTime.Now)
                                    {
                                        <span class="badge bg-info">Upcoming</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Completed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0">
            <a href="/CourtSessions" class="btn btn-sm btn-accent">View All Sessions</a>
        </div>
    </div>
</div>